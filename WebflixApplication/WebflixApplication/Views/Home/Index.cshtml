@model IEnumerable<WebflixApplication.Models.FILM>
@{
ViewBag.Title = "Home Page";
}

<div id="main-container" class="bg-dark">
	<div class="padding-sm">
		<nav class="navbar navbar-inverse">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#galleryNavigation">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">Gallery</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="galleryNavigation">
				<ul class="nav navbar-nav">
					<li class="active"><a href="#">Home</a></li>
					<li><a href="@Url.Action("ShowAdvanceSearchMovie", "Home")">Advanced Search</a></li>
				</ul>
                <div>
                    <div class="form-group col-md-3 pull-right" style="margin-top: 9px; margin-bottom: 6px;">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-search"></i></div>
                            <input type="text" class="form-control" id="search_movie" placeholder="Ex: Titanic">
                        </div>
                    </div>
                </div>
			</div><!-- /.navbar-collapse -->
		</nav>
		<div class="row">
			<div class="col-md-12">
				<h2 class="headline dark text-white">
					Latest Movies
					<span class="line"></span>
				</h2>
				<div class="movies-wrapper">
					<div class="movie-jcarousel row" id="popularMovie">
						<ul id="movie-list">
                            @foreach(var film in Model){
							    <li class="col-sm-2">
								    <a href="/film/showfilm/@film.IDFILM">
                                        <h2 class="film_title">@film.TITRE</h2>
									    <img class="posters" src="@film.POSTER" alt="Image 1">
									    <div class="quick-detail text-white">
                                            @if (film.SCENARIO.Length > 200)
                                            {
                                                <p>@film.SCENARIO.Substring(0, 200)...</p> 
                                            }
                                            else{
                                                <p>@film.SCENARIO</p>
                                            }
									    </div>
								    </a>
							    </li>
                            }
						</ul>
					</div>
				</div><!-- /jcarousel-wrapper -->
						
				<div class="padding-sm text-right">
					<a href="#" class="primary-font">See All</a>
				</div>
			</div><!-- /.col -->
		</div><!-- ./row -->
	</div><!-- /.padding-sm -->
</div><!-- /main-container -->