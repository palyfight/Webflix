@model WebflixApplication.Models.FILM

@{
    ViewBag.Title = "ShowFilm";
}

<div id="main-container" class="bg-dark">
	<div class="padding-sm">
		<div class="row">
			<div class="col-md-12">
				<h1 class="headline dark text-white">
					@Model.TITRE
					<span class="line"></span>
				</h1>
                
                <div class="row">
                    <div ><img class="col-md-2" src="@Model.POSTER" alt="Image 1"></div>
                    <div class="col-md-6">
                        <p>
                            <h2 class="text-white">@Model.SCENARIO</h2>
                        </p>
                        <p>
                            <h3 class="text-white">Nombre de copie disponible: @Model.COPIEs.Count(c => c.DISPONIBLE = true)</h3>
                            <h3 class="text-white">Pays de production: @foreach (var pays in @Model.FILMPAYS) { @pays.PAY.NOM }</h3>
                            <h3 class="text-white">Langue originale: @Model.LANGUEORIGINALE </h3>
                            <h3 class="text-white">Date de parution: @Model.DATEPARUTION</h3>
                            <h3 class="text-white">Genre: @foreach (var genre in @Model.FILMGENREs) { @genre.GENRE.TITRE }</h3>
                            <h3 class="text-white">Acteur:  <ul>@foreach (var acteur in @Model.ROLEs) {<li>@acteur.PERSONNESFILM.PRENOM @acteur.PERSONNESFILM.NOM</li> }</ul></h3>
                        </p>
                    </div>
                </div>
                <a class="btn btn-default" href="#" role="button">Louer le film</a>
			</div><!-- /.col -->
		</div><!-- ./row -->
	</div><!-- /.padding-sm -->
</div><!-- /main-container -->